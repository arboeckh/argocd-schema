name: Create Release After Migration Merge

on:
  push:
    branches:
      - main
    paths:
      - "schema/migrations/versions/**"  # Only run if migrations are updated

jobs:
  release:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Get Latest Tag
        id: tag
        run: |
          echo "LATEST_TAG=$(git describe --tags --abbrev=0 || echo v0.0.0)" >> $GITHUB_ENV

      - name: Bump Version
        id: bump_version
        run: |
          NEW_VERSION=$(echo $LATEST_TAG | awk -F. '{print $1"."$2"."$3+1}')
          echo "NEW_VERSION=v$NEW_VERSION" >> $GITHUB_ENV

      - name: Create GitHub Release
        uses: softprops/action-gh-release@v1
        with:
          tag_name: ${{ env.NEW_VERSION }}
          release_name: "Release ${{ env.NEW_VERSION }}"
          body: "Auto-generated release after database migration."
